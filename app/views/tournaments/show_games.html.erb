<table class="table table-hover table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>genre</th>
    <th>add game</th>
  </tr>
  </thead>
  <tbody>
  <%= @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.description %></td>
        <td><%= game.genre %></td>
        <td>
          <%= form_for game, url: add_game_path do |f| %>
              <%= f.hidden_field "game_id", :value => game.id %>
              <%= f.submit 'Add', :class => 'btn btn-primary' %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>