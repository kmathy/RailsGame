<!DOCTYPE html>
<html>
<head>
  <title>RailsGame</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="user">
  <% if logged_in? %>
    <%= image_tag @current_user.avatar_url, :class => 'img-circle' if @current_user.avatar? %>
      <br />
    <div class="btn btn-default"><%= link_to 'Log out', destroy_user_session_path, :method => :delete %></div>
  <% end %>
</div>
<div class="container">
  <%= yield %>
</div>

</body>
</html>